    div.u-context.u-pattern.u-gradient.u-bg-cover.u-ratio-16x9(style='background-image:url("/assets/img/bg.jpg");')
        div#muteYouTubeVideoPlayer.u-position.u-t0.u-r0.u-l0.u-b0.u-full-width.u-full-height
        script(async='', src='https://www.youtube.com/iframe_api')
        script.
            function onYouTubeIframeAPIReady() {
                var player;
                player = new YT.Player('muteYouTubeVideoPlayer', {
                    videoId: 'T1nAFmd5iQA', // YouTube Video ID
                    width: 640,             // Player width (in px)
                    height: 360,            // Player height (in px)
                    playerVars: {
                        autoplay: 1,        // Auto-play the video on load
                        controls: 0,        // Show pause/play buttons in player
                        showinfo: 0,        // Hide the video title
                        modestbranding: 1,  // Hide the Youtube Logo
                        loop: 1,            // Run the video in a loop
                        fs: 0,              // Hide the full screen button
                        cc_load_policy: 0,  // Hide closed captions
                        iv_load_policy: 3,  // Hide the Video Annotations
                        autohide: 1,        // Hide video controls when playing
                        playlist: 'T1nAFmd5iQA'
                    },
                    events: {
                        onReady: function(e) {
                            e.target.mute();
                        }
                    }
                });
            }

